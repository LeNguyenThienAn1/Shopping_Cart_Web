{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
    <h1 style="color:red;">Cart index</h1>
     <body style="background-color:LightGray;">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Delivery_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.deliveryDate ? cart.deliveryDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_cart_show', {'id': cart.id}) }}">show</a>
                    <a href="{{ path('app_cart_edit', {'id': cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cart_new') }}">Create new</a>
{% endblock %}
